<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

  <Appenders>

    <RollingRandomAccessFile
            name="MainLog" fileName="./logs/pokerplanning.log"
            filePattern="./logs/pokerplanning.%d{yyyy-MM-dd}.log.gz">
      <PatternLayout>
        <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
        </Pattern>
      </PatternLayout>
      <Policies>
        <!-- tous les jours (voir filePattern) -->
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="2"/>
    </RollingRandomAccessFile>


    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
              pattern="%d{HH:mm:ss.SSS} [%t] %-5level FT:%MDC{FishTag} %c{1.} - %msg%n"/>
    </Console>

  </Appenders>

  <Loggers>

    <Logger name="fr.pokerplanning" additivity="false"
            level="debug">
      <AppenderRef ref="MainLog"/>
      <AppenderRef ref="Console"/>
    </Logger>

    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>

  </Loggers>
</Configuration>